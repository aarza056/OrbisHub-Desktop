{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "eqeqeq": ["warn", "always"],
    "no-console": "off"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "AutomationTests/**",
    "assets/**"
  ]
}